html, body
  padding 0
  margin 0
  height 100%
  overflow-x hidden

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  background #f7f7f8

a
  font-weight 500
  text-decoration none

  &:hover
    text-decoration none

ul, ol, li
  margin 0
  padding 0
  list-style none

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  margin 0
  font-weight 600
  line-height 1
  
p
  margin: 0
  font-weight 400
  line-height 1

table
  border-collapse collapse
  margin 1rem 0

tr
  border-top 1px solid #dfe2e5
  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.text-cursor 
  cursor pointer

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  -ms-{prop} args
  {prop} args

flex()
  display -webkit-flex
  display -moz-flex
  display -ms-flexbox
  display flex

flexDirection(direction = row)
  direction

flexJustify(content)
  content

flexAlignItem(item = center)
  item

.flex-start
  flex()
  align-items flexAlignItem()

.flex-between
  flex()
  justify-content flexJustify(space-between)
  align-items flexAlignItem()

.text-unselect
  vendor('user-select', none)
