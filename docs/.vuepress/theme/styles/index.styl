html, body
  padding 0
  margin 0
  height 100%
  overflow-x hidden

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  background #e6ecf0

a
  font-weight 500
  text-decoration none

  &:hover
    text-decoration none

p
  font-weight 400
  line-height 1

ul, ol, li
  margin 0
  padding 0
  list-style none

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  margin 0
  font-weight 600
  line-height 1

table
  border-collapse collapse
  margin 1rem 0

tr
  border-top 1px solid #dfe2e5
  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.text-cursor 
  cursor pointer
